<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".contenedores">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Contenedores"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="#9DC59D"
        android:textColor="#465746"
        />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="En esta sección sabrás que contenedor le corresponde a tu residuo."
        android:textSize="16dp"
        android:textStyle="bold"

        android:textColor="#465746"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="left"
          android:text="Selecciona Tipo de Residuo:"
          android:textSize="18dp"
          android:textStyle="bold"
          android:background="#9DC59D"
          android:textColor="#465746"
          android:padding="5dp"/>

      <Spinner
          android:id="@+id/spinner"
          android:layout_width="200dp"
          android:layout_height="35dp"
          android:layout_gravity="left"
          android:layout_margin="10dp"
          android:entries="@array/tipo_residuo"
          />

      <TextView
          android:id="@+id/textocontenedor"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="left"
          android:text="-"
          android:textSize="18dp"
          android:textStyle="bold"
          android:background="#9DC59D"
          android:textColor="#465746"
          android:padding="5dp"/>

      <Spinner
          android:id="@+id/spinner2"
          android:layout_width="200dp"
          android:layout_height="35dp"
          android:layout_gravity="left"
          android:layout_margin="10dp"
          android:enabled="false"
          android:entries="@array/tipo_plastico" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="left"
          android:gravity="center"
          android:text="Contenedor Donde Debes Reciclar"
          android:textAlignment="center"
          android:textSize="18dp"
          android:textStyle="bold"
          android:background="#9DC59D"
          android:textColor="#465746"
          android:padding="5dp"/>

      <ImageView
          android:id="@+id/photo"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/contenedores"
          android:layout_margin="10dp"/>

    </LinearLayout>

  </LinearLayout>

</RelativeLayout>