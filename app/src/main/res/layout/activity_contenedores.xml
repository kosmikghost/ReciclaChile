<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".contenedores">


  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Contenedores"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="#9DC59D"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Acá podrás conocer información del contenedor de tu residuo"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#465746"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#56686868">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="left"
          android:text="Selecciona Tipo de Residuo:"
          android:textSize="18dp"
          android:textStyle="bold"
          android:background="#9DC59D"
          android:textColor="@color/black"
          android:padding="5dp"/>

      <Spinner
          android:id="@+id/spinner"
          android:layout_width="200dp"
          android:layout_height="35dp"
          android:layout_gravity="left"
          android:layout_margin="10dp"
          android:entries="@array/tipo_residuo"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="left"
          android:gravity="center"
          android:text="Contenedor Donde Debes Reciclar"
          android:textAlignment="center"
          android:textSize="18dp"
          android:textStyle="bold"
          android:background="#9DC59D"
          android:textColor="@color/black"
          android:padding="5dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">

      <ImageView
          android:id="@+id/photo"
          android:layout_width="130dp"
          android:layout_height="130dp"
          android:src="@drawable/contenedores"
          android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/btninfo"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Mas Info"
            android:background="#78B878"
            android:textStyle="bold"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

          <TextView
              android:id="@+id/textocolor"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:text="* Selecciona Un tipo de Residuo :) *"
              android:textSize="16dp"
              android:textStyle="bold"
              android:fontFamily="sans-serif-condensed"
              android:textColor="#465746"
              android:gravity="start" />

          <TextView
              android:id="@+id/textoejemplo"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:text="-"
              android:textSize="16dp"
              android:textStyle="bold"
              android:fontFamily="sans-serif-condensed"
              android:textColor="#6B756B"
              android:gravity="start" />

        </LinearLayout>

      </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:layout_gravity="center"
          android:background="#2C000000">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="*Imagen Ejemplo*"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#B60000"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

      <ImageView
          android:id="@+id/con"
          android:layout_width="200dp"
          android:layout_height="200dp"
          android:src="@drawable/logohome"
          android:layout_marginTop="5dp"
          android:layout_gravity="center"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="8dp"
          android:text="*Imagen Ejemplo*"
          android:textSize="16dp"
          android:textStyle="bold"
          android:fontFamily="sans-serif-condensed"
          android:textColor="#B60000"
          android:textAlignment="center"
          android:gravity="center_horizontal"
          android:layout_marginBottom="10dp"/>

      </LinearLayout>

    </LinearLayout>

    </LinearLayout>

  </ScrollView>

</RelativeLayout>